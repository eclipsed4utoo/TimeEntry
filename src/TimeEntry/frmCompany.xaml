<Window x:Class="TimeEntry.frmCompany"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="frmCompany" Height="400" Width="368" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="55,164,0,0" Name="lblCompanyName" Text="Company Name:" VerticalAlignment="Top" Width="99" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="176,162,0,0" Name="txtCompanyName" VerticalAlignment="Top" Width="120" />
        <ComboBox Height="23" HorizontalAlignment="Left" Margin="176,120,0,0" Name="cboCompanies" VerticalAlignment="Top" Width="120" SelectionChanged="cboCompanies_SelectionChanged" />
        <Button Content="Save" Height="23" HorizontalAlignment="Left" Margin="82,218,0,0" Name="btnSave" VerticalAlignment="Top" Width="75" Click="btnSave_Click" />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Left" Margin="198,219,0,0" Name="btnCancel" VerticalAlignment="Top" Width="75" Click="btnCancel_Click" />
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="55,120,0,0" Name="lblCompany" Text="Company:" VerticalAlignment="Top" Width="99" />
    </Grid>
</Window>
